    <button onclick="askValentine()">Ask</button>

    <script>
        function askValentine() {
            let answer = confirm("Will you be my Valentine?");
            if (answer) {
                alert("I'm so happy! <3");
            } else {
                alert("I'll keep asking until you say yes!");
            }
        }
    </script>
